<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Chelsea+Market&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  </head>

  <body>

    <header class="col-lg-12">

    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://blog.equiphotel.com/wp-content/uploads/2018/11/alcohol-bar-beer-min-1080x675.jpg);">
      <h1> <strong>It's Cocktail Time!</strong></h1>
  </div>


    </header>

<nav class="navbar navbar-dark bg-dark">
  <!-- Navbar content -->
  <%= link_to 'Home', cocktails_path %>
            <%= link_to 'Add a new cocktail', new_cocktail_path %>
</nav>

    <div class="container">
      <div class="row">
        <nav class="col-lg-3">
          <div class="row">
            <%= link_to 'Home', cocktails_path %>
            <%= link_to 'Add a new cocktail', new_cocktail_path %>
            <div class="col-lg-4">
            <form class="form-inline">
              <input class="form-control mr-sm-2" type="search" placeholder="Search for a cocktail" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            </div>
          </div>
        </nav>

        <div class="website_body">
          <div class = "col-lg-12">
          <%= yield %>
          </div>
        </div>

    </div> <!-- fermeture row -->



    </div> <!-- fermeture container -->
      <footer class="row">
        <div class="col-lg-12">

          <div class="footer">
            <div class="footer-links">
              <a href="#"><i class="fab fa-instagram"></i></a>
              <a href="#"><i class="fab fa-facebook"></i></a>
              <a href="#"><i class="fab fa-twitter"></i></a>
            </div>

            <div class="footer-copyright">
              Made with <i class="fas fa-heart"></i> at Le Wagon
            </div>
          </div>

        </div>
      </footer>

  </body>
</html>
