
<ul class="cards">
  <% @cocktails.each do |cocktail| %>
<div class="card">
    <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
    <%= cl_image_tag  cocktail.photo.attached? ? cocktail.photo.key : "bar_tpgut3", height: 200, width: 300, crop: :fill%>

</div>
  <% end %>
</ul>

<%= link_to 'Add a new cocktail', new_cocktail_path %>

 <form class="form-inline">
  <label for="search"></label><br>
  <input type="text" id="search" name="search" placeholder="Search for a cocktail"><br>
  <input type="submit" value="Submit">
</form>


